{
	"info": {
		"name": "Cart API",
		"description": "Collection for Cart Management APIs - Add, View, Update, Remove, and Clear cart items",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Add to Cart",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{auth_token}}",
						"type": "text"
					},
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"competition_id\": \"efcb944d-c2b4-4a03-99ac-7e7d4ccd7b97\",\n    \"quantity\": 5\n}"
				},
				"url": {
					"raw": "{{base_url}}/user/cart",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"user",
						"cart"
					]
				},
				"description": "Add tickets to cart. If item already exists in cart, quantity will be added to existing quantity."
			},
			"response": []
		},
		{
			"name": "Get Cart",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{auth_token}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/user/cart",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"user",
						"cart"
					]
				},
				"description": "Get all items in the user's cart with competition details, totals, and summary."
			},
			"response": []
		},
		{
			"name": "Update Cart Item",
			"request": {
				"method": "PUT",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{auth_token}}",
						"type": "text"
					},
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"quantity\": 10\n}"
				},
				"url": {
					"raw": "{{base_url}}/user/cart/:cart_item_id",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"user",
						"cart",
						":cart_item_id"
					],
					"variable": [
						{
							"key": "cart_item_id",
							"value": "cart-item-id-here",
							"description": "The ID of the cart item to update"
						}
					]
				},
				"description": "Update the quantity of a specific cart item."
			},
			"response": []
		},
		{
			"name": "Remove from Cart",
			"request": {
				"method": "DELETE",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{auth_token}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/user/cart/:cart_item_id",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"user",
						"cart",
						":cart_item_id"
					],
					"variable": [
						{
							"key": "cart_item_id",
							"value": "cart-item-id-here",
							"description": "The ID of the cart item to remove"
						}
					]
				},
				"description": "Remove a specific item from the cart."
			},
			"response": []
		},
		{
			"name": "Clear Cart",
			"request": {
				"method": "DELETE",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{auth_token}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/user/cart/clear",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"user",
						"cart",
						"clear"
					]
				},
				"description": "Remove all items from the cart."
			},
			"response": []
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:5000/api",
			"type": "string"
		},
		{
			"key": "auth_token",
			"value": "your-auth-token-here",
			"type": "string"
		}
	]
}

