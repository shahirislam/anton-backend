{
	"info": {
		"_postman_id": "social-auth-api-collection",
		"name": "Social Authentication API",
		"description": "API collection for Social Authentication (Google, Apple, Instagram) with account linking support",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Google Authentication",
			"item": [
				{
					"name": "1. Initiate Google OAuth",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const response = pm.response.json();",
									"    if (response.success) {",
									"        pm.environment.set(\"google_auth_url\", response.data.authUrl);",
									"        pm.environment.set(\"oauth_state\", response.data.state);",
									"        pm.collectionVariables.set(\"google_auth_url\", response.data.authUrl);",
									"        pm.collectionVariables.set(\"oauth_state\", response.data.state);",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/v1/auth/google",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"v1",
								"auth",
								"google"
							]
						},
						"description": "Get Google OAuth authorization URL. Copy the authUrl and open it in a browser to complete authentication. The server will redirect to the callback URL with tokens."
					},
					"response": []
				},
				{
					"name": "2. Google OAuth Callback (Manual)",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/v1/auth/google/callback?code=AUTHORIZATION_CODE&state={{oauth_state}}",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"v1",
								"auth",
								"google",
								"callback"
							],
							"query": [
								{
									"key": "code",
									"value": "AUTHORIZATION_CODE",
									"description": "Authorization code from Google (get this from the authUrl redirect)"
								},
								{
									"key": "state",
									"value": "{{oauth_state}}",
									"description": "State token from step 1"
								}
							]
						},
						"description": "**Note:** This endpoint redirects to frontend URL. For testing, you can manually construct the URL with the code from Google's redirect. The server will redirect to: {{frontend_url}}/auth/callback?token=ACCESS_TOKEN&refreshToken=REFRESH_TOKEN"
					},
					"response": []
				}
			]
		},
		{
			"name": "Apple Sign In",
			"item": [
				{
					"name": "Apple Sign In",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const response = pm.response.json();",
									"    if (response.success && response.data.accessToken) {",
									"        pm.environment.set(\"access_token\", response.data.accessToken);",
									"        pm.environment.set(\"refresh_token\", response.data.refreshToken);",
									"        pm.collectionVariables.set(\"access_token\", response.data.accessToken);",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"idToken\": \"eyJraWQiOiJlWGF1bm1...\",\n  \"user\": {\n    \"email\": \"user@example.com\",\n    \"name\": {\n      \"firstName\": \"John\",\n      \"lastName\": \"Doe\"\n    }\n  }\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/api/v1/auth/apple",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"v1",
								"auth",
								"apple"
							]
						},
						"description": "Authenticate with Apple Sign In. The idToken is obtained from Apple's native SDK. The user object is only provided on first sign-in."
					},
					"response": []
				}
			]
		},
