									"        pm.environment.set(\"instagram_oauth_state\", response.data.state);",
									"    }",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/v1/auth/instagram",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"v1",
								"auth",
								"instagram"
							]
						},
						"description": "Get Instagram OAuth authorization URL. Open the authUrl in a browser to complete authentication."
					},
					"response": []
				},
				{
					"name": "2. Instagram OAuth Callback (Manual)",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/v1/auth/instagram/callback?code=AUTHORIZATION_CODE&state={{instagram_oauth_state}}",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"v1",
								"auth",
								"instagram",
								"callback"
							],
							"query": [
								{
									"key": "code",
									"value": "AUTHORIZATION_CODE",
									"description": "Authorization code from Instagram"
								},
								{
									"key": "state",
									"value": "{{instagram_oauth_state}}",
									"description": "State token from step 1"
								}
							]
						},
						"description": "**Note:** This endpoint redirects to frontend URL. The server will redirect to: {{frontend_url}}/auth/callback?token=ACCESS_TOKEN&refreshToken=REFRESH_TOKEN"
					},
					"response": []
				}
			]
		},
