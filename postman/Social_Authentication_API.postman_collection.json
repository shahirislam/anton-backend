		{
			"name": "Testing Workflows",
			"item": [
				{
					"name": "Complete Google Auth Flow",
					"item": [
						{
							"name": "Step 1: Get Auth URL",
							"request": {
								"method": "GET",
								"header": [],
								"url": {
									"raw": "{{base_url}}/api/v1/auth/google",
									"host": [
										"{{base_url}}"
									],
									"path": [
										"api",
										"v1",
										"auth",
										"google"
									]
								}
							},
							"response": []
						},
						{
							"name": "Step 2: Open URL in Browser",
							"request": {
								"method": "GET",
								"header": [],
								"url": {
									"raw": "{{google_auth_url}}",
									"host": [
										"{{google_auth_url}}"
									]
								},
								"description": "**Manual Step:** Copy the authUrl from Step 1 and open it in a browser. After Google authentication, you'll be redirected with a code. Extract the code from the redirect URL."
							},
							"response": []
						},
						{
							"name": "Step 3: Complete Callback (with code)",
							"request": {
								"method": "GET",
								"header": [],
								"url": {
									"raw": "{{base_url}}/api/v1/auth/google/callback?code=EXTRACTED_CODE&state={{oauth_state}}",
									"host": [
										"{{base_url}}"
									],
									"path": [
										"api",
										"v1",
										"auth",
										"google",
										"callback"
									],
									"query": [
										{
											"key": "code",
											"value": "EXTRACTED_CODE",
											"description": "Replace with code from Step 2 redirect"
										},
										{
											"key": "state",
											"value": "{{oauth_state}}",
											"description": "State from Step 1"
										}
									]
								},
								"description": "Replace EXTRACTED_CODE with the actual code from Google's redirect. The server will redirect to frontend with tokens."
							},
							"response": []
						}
					]
				},
